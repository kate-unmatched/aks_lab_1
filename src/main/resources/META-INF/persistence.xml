<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="geoPU" transaction-type="JTA">
        <jta-data-source>jdbc/postgresDS</jta-data-source>

        <!-- Перечисление сущностей -->
        <class>org.geodispatch.entity.GeoZone</class>
        <class>org.geodispatch.entity.JobOrder</class>
        <class>org.geodispatch.entity.TrackerPing</class>
        <class>org.geodispatch.entity.Vehicle</class>
        <class>org.geodispatch.entity.ZoneVisit</class>

        <properties>

            <!-- Привязка к правильной схеме -->
            <property name="jakarta.persistence.default-schema" value="geodb"/>

            <!-- Полностью отключить генерацию схемы JPA -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="eclipselink.ddl-generation" value="none"/>

            <!-- База данных -->
            <property name="eclipselink.target-database" value="PostgreSQL"/>

            <!-- Логирование -->
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.parameters" value="true"/>
        </properties>
    </persistence-unit>

</persistence>
